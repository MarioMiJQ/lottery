{
  "name": "lottery",
  "version": "1.0.0",
  "description": "抽奖系统",
  "main": "electron/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build": "electron-builder --dir",
    "pkg": "cd product && npm run build && cd .. && npm run cp && electron-builder",
    "cp": "copyfiles -u 2 \"product/dist/**/*\" \"server/public/\""
  },
  "author": "ccevet",
  "license": "MIT",
  "devDependencies": {
    "electron": "22.3.24",
    "electron-builder": "23.6.0",
    "concurrently": "7.6.0",
    "copyfiles": "2.4.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "chokidar": "^2.0.3",
    "express": "^4.16.3",
    "node-xlsx": "^0.12.1",
    "opn": "^5.3.0"
  },
  "build": {
    "appId": "com.ccevet.lottery",
    "productName": "抽奖系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "!server/**/*",
      "!node_modules/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      },
      {
        "from": "node_modules",
        "to": "node_modules"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "product/src/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "product/src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "product/src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true,
      "runAfterFinish": false
    }
  }
}